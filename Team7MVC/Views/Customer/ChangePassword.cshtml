@model Team7MVC.Models.Customers

@{
    ViewBag.Title = "ChangePassword";
}

<div class="content">
    <div class="row">
        <div class="col-md-8" style="margin:auto auto;">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title">個人資料修改</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ChangePassword", "Customer", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            輸入舊密碼:
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            輸入新密碼:
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @Id = "NewPassword" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            再次輸入密碼:
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @Id = "ConfirmPassword" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <span class="tip" style="color: red;">兩次輸入的密碼不一致</span>

                        <div class="row">
                            <div class="update ml-auto mr-auto mb-3">
                                <button type="submit" class="btn btn-primary btn-round">更新資料</button>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>

    </div>

</div>

@section JQuery
{
    <script>
        $(function () {
            $("header nav")
                .removeClass("navbar-dark")
                .addClass("navbar-light");
            $("header a img").prop("src", "/Assets/img_Index/logo_dark.png");
            $("header .nav-item > a")
                .removeClass("text-white")
                .addClass("text-dark");
            $("#search-input")
                .removeClass("whiteplaceholder")
                .removeClass("text-white")
                .addClass("blackplaceholder")
                .addClass("text-dark");
            $("header").addClass("fixed-header");
        });
        $(".tip").hide();

        $("#logo").css("color", "#000");
       

        $(document).ready(function () {

            $("li").each(function () {

                if ($(this).hasClass("user-active")) {
                    $(this).removeClass("user-active");
                }

            });

            $("#sidebar_Change_Password").addClass("user-active");

            $("li").on("click", function () {
                $("#sidebar_Change_Password").removeClass("user-active");
                $(this).addClass("user-active");
            });
        });
    </script>
}
