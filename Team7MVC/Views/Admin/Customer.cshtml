@model IEnumerable<Team7MVC.ViewModels.AdminCustomersViewModel>

@{
    ViewBag.Title = "Customer Management";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <div class="d-inline tool-left">
                    @using (Html.BeginForm())
                    {
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="submit" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                排序方式
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <button class="dropdown-item" id="SortBy" name="SortBy" value="CustomerID">會員ID</button>
                                <button class="dropdown-item" id="SortBy" name="SortBy" value="CustomerName">名字</button>
                                <button class="dropdown-item" id="SortBy" name="SortBy" value="Address">地址</button>
                                <button class="dropdown-item" id="SortBy" name="SortBy" value="TotalCost desc">消費總額(高~低)</button>
                            </div>
                        </div>
                    }
                    @*<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            客戶排序
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">客戶ID</a>
            <a class="dropdown-item" href="#">客戶生日</a>
            <a class="dropdown-item" href="#">消費總金額</a>
        </div>*@
                </div>
                <div class="d-inline tool-right">
                    @*<i class="fas fa-plus"></i>*@
                    @Html.ActionLink("新增會員", "CustomerCreate", null, new { @class = "btn btn-success" })
                </div>
            </div>
            <div class="card">
                @*<div class="card-header">
                    </div>*@
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Account)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.TotalCost)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Account)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalCost)
                                        </td>
                                        <td>
                                            @Html.ActionLink("檢視", "CustomerReadOnly", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("停用", "CustomerDelete", new { id = item.CustomerID }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*@section CSS
    {
        <style>
            .table td {
                vertical-align: middle;
            }
        </style>
    }*@

@section JQ {
    <script>
        $(document).ready(function () {

            $("li").each(function () {

                if ($(this).hasClass("active")) {
                    $(this).removeClass("active");
                }

            });

            $("#customers").addClass("active");

            $("li").on("click", function () {
                $("#customers").removeClass("active");
                $(this).addClass("active");
            });
        });
    </script>
}