@section JQuery
{
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script>
        $(function () {
            $("header nav")
                .removeClass("navbar-dark")
                .addClass("navbar-light");
            $("header a img").prop("src", "../Assets/img_Index/logo_dark.png");
            $("header .nav-item > a")
                .removeClass("text-white")
                .addClass("text-dark");
            $("#search-input")
                .removeClass("whiteplaceholder")
                .removeClass("text-white")
                .addClass("blackplaceholder")
                .addClass("text-dark");
            $(window).scroll(function () {
                var scrollVal = $(this).scrollTop();
                if (scrollVal > 0) {
                    $("header").addClass("fixed-header");
                }
                if (scrollVal == 0) {
                    $("header").removeClass("fixed-header");
                }
            });
            if (


                $(".product-menu button").is(":visible")) {
                $(".product-menu dl").hide();
                $(".product-menu button").on("click", function () {
                    $(".product-menu dl").toggle();
                    $(".product-menu  i").toggleClass("fa-angle-down").toggleClass(" fa-chevron-up");
                });
            }


            if (
                $(".display_btn").is(":visible")) {
                $(" .product_Category .product_box6 ").hide();
                $(".display_btn ").on("click", function () {
                    $(".product_Category .product_box6").toggle();
                    $(".display_btn i").toggleClass("fa-angle-down").toggleClass(" fa-chevron-up");
                });
            }
        });

    </script>
}