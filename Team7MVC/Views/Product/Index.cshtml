                            <p>Explore</p>
                        </div>
                    </div>
                }*@

            @foreach (var item in Model)
            {
                <div class="product-block">
                    <a href="@Url.Action("ProductDetail","Product" , new { id = item.ProductID })">
                        <div class="product-img">
                            <img class="picture-wine" src="~/Assets/images/img_Products/@Html.DisplayFor(modelItem => item.Picture)" alt="p_sherry_oak" title="p_sherry_oak" />

                            <img class="picture-color" src="~/Assets/images/img_ProductIndex/circle-hover.png">

                            <img class="picture-nocolor" src="~/Assets/images/img_ProductIndex/circle.jpg">
                        </div>
                    </a>


                    <div class="product-intro">
                        <h3>
                            Sherry Oak 系列 @ViewData[item.CategoryID.ToString()]
                        </h3>

                        <a href="@Url.Action("ProductDetail","Product" , new { id = item.ProductID })" class="text-dark">
                            <p>@Html.DisplayFor(modelItem => item.ProductName)</p>
                        </a>

                        <a href="@Url.Action("ProductDetail","Product" , new { id = item.ProductID })" class="text-dark">
